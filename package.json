{
  "name": "trinity-project",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "preconstruct dev",
    "dev": "preconstruct dev",
    "build": "preconstruct build"
  },
  "devDependencies": {
    "@preconstruct/cli": "^2.1.5"
  },
  "preconstruct": {
    "packages": [
      "packages/trinity"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  }
}
