{
  "name": "trinity-project",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "dev": "preconstruct dev",
    "build": "preconstruct build"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "dependencies": {
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5"
  }
}
